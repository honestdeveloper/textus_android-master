<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/template_item_spacing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/template_item_spacing">

        <com.textus.textus.view.CustomClickTextView
            android:id="@+id/template_item_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/conver_item_name" />

        <com.textus.textus.view.CustomClickTextView
            android:id="@+id/template_item_txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/template_content"
            android:textSize="@dimen/conver_item_message" />
    </LinearLayout>
</android.support.v7.widget.CardView>